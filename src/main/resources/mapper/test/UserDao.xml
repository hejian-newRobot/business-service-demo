<?xml version="1.0" encoding="UTF-8" ?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.service.demo.dao.UserDao">

    <insert id="save" parameterType="com.service.demo.entity.User">
        INSERT INTO users(userName,passWord,roles) VALUES(#{user.userName},#{user.passWord},#{user.roles})
    </insert>
    <delete id="deleteAll">
        DELETE FROM users
    </delete>

    <select id="findByUserName" parameterType="string" resultType="com.service.demo.entity.User">
        SELECT * FROM users WHERE userName=#{userName}
    </select>
</mapper>